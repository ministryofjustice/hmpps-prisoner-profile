{% from "govuk/components/table/macro.njk" import govukTable %}
{% from "components/printLink.njk" import printLink %}
{% extends "./money.njk" %}

{% block body %}

    <header class="money-tab-summary">
        <h2 class="govuk-heading-m">{{ pageTitle }}</h2>

        <div class="damage-summary">
            <dl>
                <dt>Currently owes</dt>
                <dd data-qa="currently-owes">{{ currentlyOwes | formatMoney }}</dd>
            </dl>
        </div>
    </header>

    <div class="govuk-!-text-align-right">
        {{ printLink() }}
    </div>

    {{ govukTable({
        head: [
            { text: "Obligation number" },
            { text: "Adjudication" },
            { text: "Date" },
            { text: "Amount", format: "numeric" },
            { text: "Paid", format: "numeric" },
            { text: "Owes", format: "numeric" },
            { text: "Location" }
        ],
        rows: obligations,
        classes: "govuk-!-margin-top-2",
        attributes: { "data-qa": "damage-obligations-table" }
    }) }}

{% endblock %}
