{% macro hmppsActionButton(options) %}
    <div class="hmpps-action-button" id="{{options.id | default('')}}" data-qa="{{options.id | default('')}}">
        <img src="/assets/images/actions/{{ options.iconName }}.svg" aria-hidden="true" alt="" width="40" height="40" />
        <a href="{{ options.url }}" class="govuk-link govuk-link--no-visited-state" referrerpolicy="no-referrer-when-downgrade">{{ options.text }}</a>
    </div>
{% endmacro %}
