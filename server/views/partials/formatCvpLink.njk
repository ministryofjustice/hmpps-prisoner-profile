{# Macro to format the BVLS appointment CVP link for court hearings based on known information #}

{% macro formatCvpLink(hmctsNumber, videoLinkUrl) %}
    {% set cvpLinkUrl %}
        {% if hmctsNumber %}
            {{ (hmctsNumber | toFullCourtLink) }}
        {% elseif videoLinkUrl %}
            {{ videoLinkUrl }}
        {% else %}
            None entered
        {% endif %}
    {% endset %}
    {{ cvpLinkUrl }}
{% endmacro %}
