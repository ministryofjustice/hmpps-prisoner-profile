{% macro alertCard(alert) %}
<div class="hmpps-alert-card-list-item" role="listitem">
    <div class="hmpps-alert-card-list-item__content">
        <div class="hmpps-alert-card-list-item__sub-title">{{ alert.alertTypeDescription }}</div>
        <div class="hmpps-alert-card-list-item__title">{{ alert.alertCodeDescription }}</div>
        <pre class="hmpps-alert-card-list-item__notes govuk-body">{{ alert.comment }}</pre>
        <div class="hmpps-alert-card-list-item__metadata"><span>Created:</span> {{ alert.dateCreated | formatDate }} {% if alert.addedByFullName %} by {{ alert.addedByFullName }} {% endif %}</div>
        {% if not alert.active %}
            <div class="hmpps-alert-card-list-item__metadata"><span>Closed:</span> {{ alert.dateExpires | formatDate }} {% if alert.expiredByFullName %} by {{ alert.expiredByFullName }} {% endif %}</div>
        {% endif %}
    </div>
    <div class="hmpps-alert-card-list-item__link">
        {% if alert.updateLinkUrl %}
        <a href="{{ alert.updateLinkUrl }}" class="govuk-link govuk-link--no-visited-state">Update or close</a>
        {% endif %}
    </div>
</div>
{% endmacro %}