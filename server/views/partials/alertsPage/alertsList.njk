{% from '../../macros/hmppsPagedListHeader.njk' import hmppsPagedListHeader %}
{% from '../../macros/hmppsPagedListFooter.njk' import hmppsPagedListFooter %}
{% from './macros/alertCard.njk' import alertCard %}

{% set options = { currentUrlPath: currentUrlPath, sortBy: 'createdDesc' } %}

{{ hmppsPagedListHeader(options) }}
<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <div class="hmpps-alert-card-list" role="list">
            {% for alert in pagedAlerts.content %}
                {{ alertCard(alert) }}
            {% endfor %}
        </div>
    </div>
</div>
{{ hmppsPagedListFooter(options) }}

