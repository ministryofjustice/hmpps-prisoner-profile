{% macro tabLinksMacro(tabLinks) %}
  <ul class="hmpps-profile-tab-links">
    {% for tabLink in tabLinks %}
      {% if tabLink.active %}
        <li class="govuk-heading-s hmpps-profile-tab-link-selected" data-qa="active-tab">
      {% else %}
        <li class="govuk-heading-s">
      {% endif %}
        <a
          href="{{ tabLink.href | default('#') }}"
          class="govuk-link govuk-link--no-visited-state govuk-link--no-underline"
          data-qa="{{tabLink.label}}"
          >{{ tabLink.label }}</a
        >
      </li>
    {% endfor %}
  </ul>
{% endmacro %}
