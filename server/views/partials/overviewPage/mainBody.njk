{% from "./macros/statusListMacro.njk" import statusList %}
{% from "./miniSummaryBoxes/miniSummaryBoxList.njk" import  miniSummaryListMacro %} 

<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <div class="govuk-grid-row">
        <section class="govuk-grid-column-full" aria-label="Status List">
            {{ statusList(statuses) }}
        </section>
    </div>
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full" data-qa="overview-mini-summary-group-a">
            {{ miniSummaryListMacro(miniSummaryParamGroupA)}}
        </div>
    </div>
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-full">
        {{ summaryCard({
                    title: "Staff contacts", 
                    layout: "summaryList", 
                    columns: 1,
                    footer: {
                        text: "View all professional contacts",
                        href: "#"
                    }
                }) }}
      </div>
    </div>
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-full">
        {{ summaryCard({
                    title: "Personal", 
                    layout: "summaryList", 
                    columns: 2
                }) }}
      </div>
    </div>
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full" data-qa="overview-mini-summary-group-b">
            {{ miniSummaryListMacro(miniSummaryParamGroupB)}}
        </div>
    </div>
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-full">
        {{ summaryCard({
                    title: "Today's schedule", 
                    layout: "schedule",
                    footer: {
                        text: "View 7 day schedule",
                        href: "#"
                    }
                }) }}
      </div>
    </div>
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-full">
        {{ summaryCard({
                    title: "Non-associations in Birmingham (HMP)", 
                    layout: "nonAssociations",
                    footer: {
                        text: "View all non-associations",
                        href: "#"
                    }
                }) }}
      </div>
    </div>
  </div>
</div>