{% from "../../../macros/summaryCardMacro.njk" import summaryCard %}
{% from "../../../macros/summaryListRow.njk" import summaryListRow %}
{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}

{% set age = personalDetails.personalDetailsMain.age.years + " years, " + personalDetails.personalDetailsMain.age.months | pluralise('month') if personalDetails.personalDetailsMain.age else "None" %}

{%- call summaryCard({title: "Personal"}) -%}
  <div class="govuk-grid-row" data-qa="personal-details">
    <div class="govuk-grid-column-one-half hmpps-full-width-print">
      <dl class="govuk-summary-list">
        {{ summaryListRow("Preferred name", personalDetails.personalDetailsMain.preferredName or 'None', "preferred-name") }}
        {{ summaryListRow("Date of birth", personalDetails.personalDetailsMain.dateOfBirth or 'None', "date-of-birth") }}
        {{ summaryListRow("Age", age, "age") }}
        {{ summaryListRow("Nationality", personalDetails.personalDetailsMain.nationality or 'None', "nationality") }}
        {{ summaryListRow("Spoken language", personalDetails.personalDetailsMain.spokenLanguage or 'No language entered', "spoken-language") }}
      </dl>
    </div>
    <div class="govuk-grid-column-one-half hmpps-full-width-print">
      <dl class="govuk-summary-list">
        {{ summaryListRow("Ethnic group", personalDetails.personalDetailsSide.ethnicGroup or 'Not entered', "ethnic-group") }}
        {{ summaryListRow("Religion or belief", personalDetails.personalDetailsSide.religionOrBelief or 'Not entered', "religion-or-belief") }}
        {{ summaryListRow("CRO number", personalDetails.personalDetailsSide.croNumber or 'None', "cro-number") }}
        {{ summaryListRow("PNC number", personalDetails.personalDetailsSide.pncNumber or 'None', "pnc-number") }}
      </dl>
    </div>
  </div>
{%- endcall -%}
