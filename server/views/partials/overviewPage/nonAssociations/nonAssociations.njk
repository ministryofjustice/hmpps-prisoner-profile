{% from "../../../macros/summaryCardMacro.njk" import summaryCard %}
{% from "govuk/components/table/macro.njk" import govukTable %}
{%- call summaryCard({title: "Non-associations in " + prisonName }) -%}
  <div class="govuk-grid-row">
    {% if(nonAssociations.length > 0) %}
      <div class="govuk-grid-column-full" data-qa="non-associations-table">
        {{
          govukTable({
          firstCellIsHeader: true,
          head: [
          {
          text: "Name"
          },
          {
          text: "Prison number"
          },
          {
          text: "Location"
          },
          {
          text: "Reciprocal reason"
          }
          ],
          rows: nonAssociations
          })
        }}
      </div>
    {% else %}
      <div class="govuk-grid-column-full" data-qa="non-associations-table">
        <p class="govuk-body">No non-associations have been entered.</p>
      </div>
    {% endif %}
  </div>
{%- endcall -%}
