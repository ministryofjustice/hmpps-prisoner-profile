{% macro statusList(statuses) %}
  <ul class="hmpps-status-list">
    {% for status in statuses %}
      <li class="hmpps-status hmpps-status{% if status.error %}--error{% else %}--success{% endif %}">
        <p>{{ status.label }}</p>
        {% if status.date %}
            <p>
              Last Updated:
              <span aria-label="{{ status.date | formatDate }}">{{ status.date | formatDate('short') }}</span>
            </p>
        {% elseif status.subText %}
            <p>{{ status.subText }}</p>
        {% endif %}
      </li>
    {% endfor %}
  </ul>
{% endmacro %}
