{% macro statusList(statuses) %}
  <ul class="hmpps-status-list">
    {% for status in statuses %}
      <li class="hmpps-status {% if status.error %}hmpps-status--error{% endif %}">
        <p>{{ status.label }}</p>
        {% if status.date %}
          <p>
            Last Updated:
            <span aria-label="{{ status.date | formatDate }}">{{ status.date | formatDate('short') }}</span>
          </p>
        {% elseif status.subText %}
          <p>
            {% if status.subTextHref %}
              <a href="{{ status.subTextHref }}">{{ status.subText }}</a>
            {% else %}
              {{ status.subText }}
            {% endif %}
          </p>
        {% endif %}
      </li>
    {% endfor %}
  </ul>
{% endmacro %}
