{# Goals summary card content for when the prisoner only has VC2 goals #}

<div data-qa="vc2-goals">
  <p class="govuk-body" data-qa="goals-info-text">The careers, information, advice and guidance (CIAG) team set these goals using Virtual Campus (VC2). They do not include sentence plan targets.</p>
  <h3 class="govuk-heading-s govuk-!-margin-bottom-1">Employment goals</h3>
  <div class="hmpps-goal-container">
  {% if (curiousGoals.employmentGoals.length > 0) %}
      {{ govukSummaryList({
          classes: "hmpps-font-weight-normal",
          rows: curiousGoals.employmentGoals
      }) }}
  {% else %}
      <p>The prisoner does not have any employment goals.</p>
  {% endif %}
  </div>

  <h3 class="govuk-heading-s govuk-!-margin-bottom-1">Personal goals</h3>
  <div class="hmpps-goal-container">
  {% if (curiousGoals.personalGoals.length > 0) %}
      {{ govukSummaryList({
          classes: "hmpps-font-weight-normal",
          rows: curiousGoals.personalGoals
      }) }}
  {% else %}
      <p class="govuk-body">The prisoner does not have any personal goals.</p>
  {% endif %}
  </div>

  <h3 class="govuk-heading-s govuk-!-margin-bottom-1">Short-term goals</h3>
  <div class="hmpps-goal-container">
  {% if (curiousGoals.shortTermGoals.length > 0) %}
      {{ govukSummaryList({
          classes: "hmpps-font-weight-normal",
          rows: curiousGoals.shortTermGoals
      }) }}
  {% else %}
      <p class="govuk-body">The prisoner does not have any short-term goals.</p>
  {% endif %}
  </div>

  <h3 class="govuk-heading-s govuk-!-margin-bottom-1">Long-term goals</h3>
  <div class="hmpps-goal-container hmpps-goal-container--no-border">
  {% if (learnerGoals.longTermGoals.length > 0) %}
      {{ govukSummaryList({
          classes: "hmpps-font-weight-normal",
          rows: curiousGoals.longTermGoals
      }) }}
  {% else %}
      <p class="govuk-body">The prisoner does not have any long term goals.</p>
  {% endif %}
  </div>
</div>
