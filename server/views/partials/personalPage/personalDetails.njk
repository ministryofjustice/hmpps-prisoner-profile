{% from "../../macros/summaryCardMacro.njk" import summaryCard %}
{% from "govuk/components/table/macro.njk" import govukTable %}
{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}
{% set aliases = [] %}
{% for alias in personalDetails.aliases %}
  {% set aliases = (aliases.push([{text: alias.alias}, {text: alias.dateOfBirth}]), aliases) %}
{% endfor %}
{%- call summaryCard({title: "Personal details", id: "personal-details"}) -%}
  <div class="govuk-grid-row" data-qa="personal-details">
    <div class="govuk-grid-column-full">
      {{ govukSummaryList({
          classes: 'govuk-summary-list--no-border govuk-!-margin-bottom-0',
          rows: [
            { key: { text: "Name"}, value: { text: personalDetails.fullName} }
          ]
      }) }}
      <details class="govuk-details" data-module="govuk-details">
        <summary class="govuk-details__summary">
          <span class="govuk-details__summary-text">View aliases</span>
        </summary>
        <div class="govuk-details__text">
          {{ govukTable({
            head: [
              {
                text: "Alias"
              },
              {
                text: "Alias date of birth"
              }
            ],
            rows: aliases
          }) }}
        </div>
      </details>
      <hr class="govuk-section-break govuk-section-break--visible" />
      {{ govukSummaryList({
          rows: [
            { key: { text: "Date of birth"}, value: { text: personalDetails.dateOfBirth } },
            { key: { text: "Place of birth"}, value: { text: personalDetails.placeOfBirth } },
            { key: { text: "Nationality"}, value: { text: personalDetails.nationality } },
            { key: { text: "Ethnic group"}, value: { text: personalDetails.ethnicGroup } },
            { key: { text: "Religion or belief"}, value: { text: personalDetails.religionOrBelief } },
            { key: { text: "Sex"}, value: { text: personalDetails.sex } },
            { key: { text: "Sexual orientation"}, value: { text: personalDetails.sexualOrientation } },
            { key: { text: "Marriage or civil partnership status"}, value: { text: personalDetails.marriageOrCivilPartnership } },
            { key: { text: "Number of children"}, value: { text: personalDetails.numberOfChildren } },
            { key: { text: "Languages"}, value: { text: personalDetails.languages } },
            { key: { text: "Other languages"}, value: { text: personalDetails.otherLanguages } },
            { key: { text: "Type of diet"}, value: { text: personalDetails.typeOfDiet } },
            { key: { text: "Smoker or vaper"}, value: { text: personalDetails.smokerOrVaper } },
            { key: { text: "Domestic abuse perpetrator"}, value: { text: personalDetails.domesticAbusePerpetrator } },
            { key: { text: "Domestic abuse victim"}, value: { text: personalDetails.domesticAbuseVictim } },
            { key: { text: "Social care needed"}, value: { text: personalDetails.socialCareNeeded } }
          ]
      }) }}
    </div>
  </div>
{%- endcall -%}
