{% from "../../macros/summaryCardMacro.njk" import summaryCard %}
{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}
{% set tattooOne %}
  <p class="govuk-body">Arm</p>
  <details class="govuk-details" data-module="govuk-details">
    <summary class="govuk-details__summary">
      <span class="govuk-details__summary-text">View details</span>
    </summary>
    <div class="govuk-details__text">
      <p class="govuk-body govuk-!-margin-bottom-1">
        <span class="govuk-!-font-weight-bold">Side</span><br />
        Left
      </p>
      <p class="govuk-body govuk-!-margin-bottom-1">
        <span class="govuk-!-font-weight-bold">Orientation</span><br />
        High
      </p>
      <p class="govuk-body govuk-!-margin-bottom-1">
        <span class="govuk-!-font-weight-bold">Comment</span><br />
        Native indian with red stripe across face
      </p>
      <p class="govuk-body">Picture</p>
    </div>
  </details>
{% endset %}
{%- call summaryCard({title: "Appearance", id: "appearance"}) -%}
  <div class="govuk-grid-row" data-qa="personal-details">
    <div class="govuk-grid-column-full">
      <h3 class="govuk-heading-m">Physical characteristics</h3>
      {{ govukSummaryList({
          rows: [
            {key: { text: "Height"}, value: { text: "1.88 m"} },
            {key: { text: "Weight"}, value: { text: "80kg"} },
            {key: { text: "Hair colour"}, value: { text: "Brown"} },
            {key: { text: "Left eye colour"}, value: { text: "Brown"} },
            {key: { text: "Right eye colour"}, value: { text: "Brown"} },
            {key: { text: "Shape of face"}, value: { text: "Oval"} },
            {key: { text: "Build"}, value: { text: "Small"} },
            {key: { text: "Shoe size"}, value: { text: "10"} },
            {key: { text: "Warned about tattooing"}, value: { text: "Yes"} },
            {key: { text: "Warned not to change appearance"}, value: { text: "Yes"} }
          ]
      }) }}
      <h3 class="govuk-heading-m">Distinguishing marks</h3>
      {{ govukSummaryList({
          rows: [
            {key: { text: "Tattoo"}, value: { html: tattooOne } }
          ]
      }) }}
    </div>
  </div>
{%- endcall -%}
