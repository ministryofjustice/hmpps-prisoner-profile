{
  "name": "hmpps-prisoner-profile",
  "version": "0.0.1",
  "description": "HMPPS Prisoner Profile",
  "repository": "git@github.com:ministryofjustice/hmpps-prisoner-profile.git",
  "license": "MIT",
  "scripts": {
    "prepare": "hmpps-precommit-hooks-prepare",
    "watch-ts": "tsc -w",
    "build": "node esbuild/esbuild.config.js --build",
    "start": "node $NODE_OPTIONS dist/server.js | bunyan -o short",
    "start:dev": "concurrently -k -p \"[{name}]\" -n \"ESBuild,Node\" -c \"yellow.bold,cyan.bold\" \"node esbuild/esbuild.config.js --build --watch\" \"node esbuild/esbuild.config.js --dev-server\"",
    "start-feature": "node $NODE_DEBUG_OPTION --env-file=feature.env dist/server.js | bunyan -o short",
    "start-feature:dev": "concurrently -k -p \"[{name}]\" -n \"ESBuild,Node\" -c \"yellow.bold,cyan.bold\" \"node esbuild/esbuild.config.js  --build --watch \" \"node esbuild/esbuild.config.js --dev-test-server\"",
    "record-build-info": "node ./bin/record-build-info",
    "lint": "eslint . --cache --max-warnings 0",
    "lint-fix": "eslint . --cache --max-warnings 0 --fix",
    "typecheck": "tsc && tsc -p integration_tests",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --runInBand",
    "security_audit": "npx audit-ci --config audit-ci.json",
    "int-test": "cypress run",
    "int-test-ui": "cypress open --e2e --browser chrome",
    "integration-test-1": "cypress run --spec \"**/personal/edit/**/*.cy.ts\"",
    "integration-test-2": "cypress run --spec \"**/personal/editDistinguishingMarks/**/*.cy.ts\"",
    "integration-test-3": "cypress run --spec \"**/e2e/*.cy.ts,**/alerts/**/*.cy.ts,**/personal/*.cy.ts,**/photo/**/*,**/workAndSkillsPage/**/*.cy.ts\"",
    "clean": "rm -rf dist test_results",
    "rebuild": "npm run clean && npm i && npm run build",
    "postinstall": "npx patch-package",
    "precommit:secrets": "gitleaks git --pre-commit --redact --staged --verbose --config .gitleaks/config.toml",
    "precommit:lint": "lint-staged",
    "precommit:verify": "npm run typecheck && npm test"
  },
  "engines": {
    "node": "^22",
    "npm": "^11"
  },
  "jest": {
    "coverageReporters": [
      "lcov"
    ],
    "coverageDirectory": "coverage",
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest"
      ]
    },
    "collectCoverageFrom": [
      "server/**/*.{ts,js,jsx,mjs}"
    ],
    "testMatch": [
      "<rootDir>/(server|job)/**/?(*.)(cy|test).{ts,js,jsx,mjs}"
    ],
    "testEnvironment": "node",
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "test_results/jest/"
        }
      ],
      [
        "./node_modules/jest-html-reporter",
        {
          "outputPath": "test_results/unit-test-reports.html"
        }
      ]
    ],
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "node",
      "ts"
    ]
  },
  "lint-staged": {
    "*.{ts,js,css}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@apollo/client": "^4.0.5",
    "@aws-sdk/client-sqs": "^3.896.0",
    "@contentful/rich-text-html-renderer": "^17.1.5",
    "@contentful/rich-text-types": "^17.2.4",
    "@ministryofjustice/frontend": "^3.7.2",
    "@ministryofjustice/hmpps-auth-clients": "^0.0.3",
    "@ministryofjustice/hmpps-connect-dps-components": "^5.0.0",
    "@ministryofjustice/hmpps-connect-dps-shared-items": "^2.1.2",
    "@ministryofjustice/hmpps-prison-permissions-lib": "^0.4.0",
    "@ministryofjustice/hmpps-rest-client": "^0.0.3",
    "@sentry/node": "^10.17.0",
    "@types/multer": "^1.4.13",
    "accessible-autocomplete": "^3.0.1",
    "agentkeepalive": "^4.6.0",
    "applicationinsights": "^2.9.8",
    "body-parser": "^2.2.0",
    "bunyan": "^1.8.15",
    "bunyan-format": "^0.2.1",
    "compression": "^1.8.1",
    "connect-flash": "^0.1.1",
    "connect-redis": "^9.0.0",
    "contentful": "^11.7.19",
    "cropperjs": "^2.0.1",
    "csrf-sync": "^4.2.1",
    "date-fns": "^3.6.0",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "govuk-frontend": "^5.12.0",
    "helmet": "^8.1.0",
    "http-errors": "^2.0.0",
    "jquery": "^3.7.1",
    "jwt-decode": "^4.0.0",
    "libphonenumber-js": "^1.12.24",
    "multer": "^2.0.2",
    "nocache": "^4.0.0",
    "nunjucks": "^3.2.4",
    "passport": "^0.7.0",
    "passport-oauth2": "^1.8.0",
    "redis": "^5.8.2",
    "superagent": "^10.2.3",
    "url-value-parser": "^2.2.0"
  },
  "devDependencies": {
    "@jgoz/esbuild-plugin-typecheck": "^4.0.3",
    "@ministryofjustice/eslint-config-hmpps": "^0.0.5",
    "@ministryofjustice/hmpps-precommit-hooks": "^0.0.4",
    "@tsconfig/node22": "^22.0.2",
    "@types/bunyan": "^1.8.11",
    "@types/bunyan-format": "^0.2.9",
    "@types/compression": "^1.8.1",
    "@types/connect-flash": "0.0.40",
    "@types/cookie-session": "^2.0.49",
    "@types/express-session": "^1.18.2",
    "@types/http-errors": "^2.0.5",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "22.18.6",
    "@types/nunjucks": "^3.2.6",
    "@types/passport": "^1.0.17",
    "@types/passport-oauth2": "^1.8.0",
    "@types/superagent": "^8.1.9",
    "@types/supertest": "^6.0.3",
    "audit-ci": "^7.1.0",
    "aws-sdk-client-mock": "^4.1.0",
    "cheerio": "^1.1.2",
    "chokidar": "^4.0.3",
    "concurrently": "^9.2.1",
    "cookie-session": "^2.1.1",
    "cypress": "^14.5.4",
    "cypress-file-upload": "^5.0.8",
    "cypress-multi-reporters": "^2.0.5",
    "esbuild": "^0.25.10",
    "esbuild-plugin-clean": "^1.0.1",
    "esbuild-plugin-copy": "^2.1.1",
    "esbuild-plugin-manifest": "^1.0.5",
    "esbuild-sass-plugin": "^3.3.1",
    "glob": "^10.4.5",
    "jest": "^30.1.3",
    "jest-html-reporter": "^4.3.0",
    "jest-junit": "^16.0.0",
    "jsonwebtoken": "^9.0.2",
    "lint-staged": "^16.2.0",
    "mocha-junit-reporter": "^2.2.1",
    "nock": "^14.0.10",
    "prettier": "^3.6.2",
    "prettier-plugin-jinja-template": "^2.1.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.4",
    "typescript": "^5.9.2",
    "uuid": "^11.1.0"
  },
  "overrides": {
    "@jgoz/esbuild-plugin-typecheck": {
      "esbuild": "$esbuild"
    },
    "nunjucks": {
      "chokidar": "$chokidar"
    }
  }
}
